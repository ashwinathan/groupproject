<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">


    <com.example.groupproject.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/timeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="500dp"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/timeBetweenTrains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainList"
        android:textSize="18dp"
        android:text="" />


    <com.example.groupproject.AnalogClockView
        android:id="@+id/analogClockView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="1dp"/>


    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/trainList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:layout_below="@+id/results"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/goToMap"
        android:onClick="resultsSubmit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/analogClockView"
        android:layout_below="@id/timeDisplay"
        android:layout_centerHorizontal="true"
        android:text="Go to Map"
        />

    <Button
        android:id="@+id/goBackResults"
        android:onClick="resultsBack"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/analogClockView"
        android:layout_below="@id/goToMap"
        android:layout_centerHorizontal="true"
        android:text="Back"
        />




</RelativeLayout>



